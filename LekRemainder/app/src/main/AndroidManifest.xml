<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.com.mmotak.lekremainder">

    <application
        android:name=".lekapp.LekRemainderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DrugsActivity"
            android:label="@string/title_activity_add_drug"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.NewDrugActivity"
            android:label="@string/title_activity_new_drug"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.EditNewDrugActivity"
            android:label="@string/title_activity_edit_new_drug"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".activities.SingleDrugActivity"
            android:label="@string/title_activity_edit_new_drug"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>